@model Concesionaria.Models.ModelsSupport.AutoClienteCreate
@{
    Layout = null;
}
@using (Ajax.BeginForm("CreateAutoCliente", "VentaAuto", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "frmVenta", OnSuccess = "SuccessAutoCliente_C" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="modal-header">
            <h5 class="modal-title">Nuevo Accesorio</h5>
            <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IdAutomovil, "IdAutomovil", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdAutomovil, new SelectList(ViewBag.Automovil, "Id", "Value"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdAutomovil, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-success">Aceptar</button>
        </div>
    </div>
        }
<script>
    function SuccessAutoCliente_C(data) {
        AutoClienteLoad();
        if (data == "1") {
            $('#VentaModal').modal("hide");

            Swal.fire({
                position: "top",
                title: "Correcto",
                text: "Automovil ingresado",
                icon: "success",
                button: "Aceptar",
            });
        }
        else if (data == "2") {
            $('#VentaModal').modal("hide");

            Swal.fire({
                position: "top",
                title: "Atención",
                text: "Numero de promoción existente",
                icon: "warning",
                button: "Aceptar",
            });
        }
        else if (data == "3") {
            $('#VentaModal').modal("hide");

            Swal.fire({
                position: "top",
                title: "Atención",
                text: "La fecha de vigencia no es valida",
                icon: "warning",
                button: "Aceptar",
            });
        }
        else {
            $('#AutoClteEmpModal').modal("hide");

            Swal.fire({
                position: "top",
                title: "Error",
                text: "Error No Reconocido",
                icon: "warning",
                button: "Aceptar",
            });
        }

    }
</script>
