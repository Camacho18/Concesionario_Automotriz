
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="">
                    <button class="btn btn-primary col-2" id="Btn_NewAcce">Nuevo +</button>
                </div>
                <br />
                <div class="">
                    @Html.EJS().Grid("Grid_Accesorio").AllowResizing(true).AllowSorting().AllowFiltering().Columns(col =>
               {
                   col.Field("IdAccesorio").HeaderText("Usuario").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Visible(false).Add();
                   col.Field("Numero").HeaderText("Número").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                   col.Field("Nombre").HeaderText("Nombre").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                   col.Field("CantidadExistencia").HeaderText("Existencia").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                   col.Field("CantidadVendido").HeaderText("Vendido").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();                   
                   col.HeaderText("Opciones").Template("#templateAcce").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
               }).AllowPaging().SelectionSettings(select => select.Type(Syncfusion.EJ2.Grids.SelectionType.Single)).PageSettings(page => page.PageCount(2)).Render()
                </div>

            </div>
        </div>
    </div>
</div>

<script id="templateAcce" type="text/x-template">
    <div class="row text-center">
        <div class="col-md-12 ">
            <div class="">
                <a class="text-succcess" href="javascript:void(0)" onclick="RowSelectEmp(${IdAccesorio})" data-toggle="tooltip" data-placement="top" title="Editar">
                    <i class="ti-user"></i>
                </a>
                <a class="text-secondary " style="padding:0px,5px,0px,5px; margin-left:10px; margin-right:10px" href="javascript:void(0)" onclick="Usuario(${IdAccesorio})" data-toggle="tooltip" data-placement="top" title="Ver Autos">
                    <i class="fa fa-user"> </i>
                </a>
                ${if(Estado==="Eliminado")}
                <a class="text-danger" href="javascript:void(0)" onclick="ActivateEmp(${ IdAccesorio })" data-toggle="tooltip" data-placement="top" title="Activar">
                    <i class="fa fa-check"></i>
                </a>
                ${else}
                <a class="text-danger" href="javascript:void(0)" onclick="DeleteEmp(${ IdAccesorio })" data-toggle="tooltip" data-placement="top" title="Eliminar">
                    <i class="fa fa-remove"></i>
                </a>
                ${/if}
            </div>
        </div>
    </div>
</script>

<div class="modal fade" id="AcceModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="frmAcce">

            </div>

        </div>
    </div>
</div>

<script>

        $(function () { AccesorioLoad(); })

    function AccesorioLoad() {

            $.get('@Url.Action("AccesorioJson","Accesorio")', function (data) {
                var grid = document.getElementById('Grid_Accesorio').ej2_instances[0]; // Grid instance
                grid.dataSource = JSON.parse(data);
            });
        }

    $('#Btn_NewAcce').click(function(){
             $.get('@Url.Action("CreateAcce","Accesorio")', function (data) {
                 $('#frmAcce').html(data);
                 $('#AcceModal').modal("show");
                });
        });

        // [I] Row Select Grid
        function RowSelectEmp(Id) {
            $.get('@Url.Action("UpdateEmp", "Empleado", new { IdEmpleado = "_id_" })'.replace('_id_', Id), function (data) {
                $("#frmEmp").html(data);
                $("#CreateEmpModal").modal("show");
            });

        }

        function Usuario(id) {
         $.get('@Url.Action("Create","Usuario", new { Id = "_ID_"})'.replace('_ID_', id), function (data) {
             $('#frmEmp').html(data);
             $('#CreateEmpModal').modal("show");
                    });
    }

        function DeleteEmp(id) {


            Swal.fire({
                position: "top",
                title: 'Eliminar',
                text: "Desea eliminar empleado!",
                icon: 'warning',
                showCancelButton: true,
                showConfirmButton: true,
                cancelButtonColor: '#d33',
                confirmButtonColor: '#3085d6',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Eliminar',
                reverseButtons: true
            }).then((result) => {
                if (result.value) {
                    $.get('@Url.Action("DeleteEmp","Empleado", new { Id = "_ID_"})'.replace('_ID_', id), function (data) {
                        EmpleadoLoad();
                        Swal.fire({
                            position: "top",
                            title: "Correcto",
                            text: "Empleado Eliminado",
                            icon: "success",
                            button: "Aceptar",
                        });
                    });
                }
            })



